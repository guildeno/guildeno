{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "removeComments": false,
        "noLib": false,
        "emitDecoratorMetadata": false,
        "experimentalDecorators": false,
        "target": "es6",
        "sourceMap": true,
        "lib": ["es6"]
    },
    "exclude": ["node_modules", "**/*.spec.ts"]
}
